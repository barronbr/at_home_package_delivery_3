<!-- Validation failure messages -->

<% if @package.errors.any? %>
  <% @package.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Package #<%= @package.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_package/<%= @package.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for carrier -->
          <div class="form-group">
            <label for="carrier" class="col-sm-2 control-label">
              Carrier
            </label>
            <div class="col-sm-10">
            <select name="carrier">
              <option value="ups">UPS</option>
              <option value="fedex">FedEx</option>
              <option value="usps">USPS</option>
              <option value="dhl">DHL</option>
            </select>
            </div>
          </div>

          <!-- Label and input for user_id -->
<!--           <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @package.user_id %>">
            </div>
          </div> -->

          <!-- Label and input for tracking_number -->
          <div class="form-group">
            <label for="tracking_number" class="col-sm-2 control-label">
              Tracking number
            </label>
            <div class="col-sm-10">
              <input type="text" id="tracking_number" name="tracking_number" placeholder="Tracking number" class="form-control" value="<%= @package.tracking_number %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Package
              </button>
              or
              <a href="/packages/<%= @package.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
